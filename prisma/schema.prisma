generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String?
  email    String  @unique
  password String
  events   Event[]
}

model Event {
  id        String   @id @default(uuid())
  title     String
  date      DateTime
  location  String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}
